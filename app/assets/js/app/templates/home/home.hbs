<div class="container home-container">
    <div class="col-md-4">
        <h3>Add Kanji</h3>
        <form class="add-character">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                      <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <span class="collapse-text">Manual Entry</span>
                        </a>
                      </h4>
                    </div>
                    <div class="panel-collapse collapse in" id="collapseOne">
                        <div class="panel-body">
                            <textarea class="input form-control buffer-bottom" rows="3"></textarea>
                            <p class="small">Characters that do not have a stroke-order are ignored.</p>
                            <a class="btn btn-default submit">Add</a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                      <h4 class="panel-title">
                        <span class="wanikani-icon"><img src="img/wanikani.png" /></span>
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            <span class="collapse-text">WaniKani API</span>
                        </a>
                      </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel">
                      <div class="panel-body">
                        <div class="control-group">
                            <label class="control-label">API Key:</label>
                            <input type="text" class="form-control wanikani-api" name="api" value="{{ wk_key }}" />
                        </div>
                        <div class="control-group row buffer-top form-horizontal">
                            <div class="col-md-12">
                                <label class="control-label">Critical Items Threshold</label>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="crit-percent" value="95" />                        
                                    <div class="input-group-addon">%</div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <p class="small">At what percentage did you answer correctly.</p>                        
                            </div>
                        </div>
                        <div class="wk-error alert alert-danger hidden"></div>
                        <a class="btn btn-sm btn-default get-wanikani">Fetch</a>
                      </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a href="#collapseThree" data-parent="#accordion" data-toggle="collapse">
                                Worksheet Template Settings
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel">
                        <div class="panel-body">
                            <div class="template-options">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="template-format" value="large" {{#is format 'large' }}checked{{/is}} />
                                        Large Format (2 per 'page')
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="template-format" value="condensed" {{#is format 'condensed' }}checked{{/is}} />
                                        Condensed Format (3-4 per 'page')
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="template-format" value="two-col" {{#is format 'two-col' }}checked{{/is}} />
                                        2 Column condensed - great for kana and low stroke order kanji
                                    </label>
                                </div>
{{!--                                 
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="template-format" value="practice-sheet" />
                                        Practice Sheet: condensed format with practice grid
                                    </label>
                                </div>
 --}}
                             </div>
                        </div>
                    </div>
                </div>
          </div>
        </form>
    </div>
    <div class="col-md-8">
        <h3 class="queue-title">Queue</h3>
        <div class="row">
            <div class="col-md-12 actions align-right buffer-bottom">
                <a class="process-btn btn btn-primary btn-lg hidden buffer-top">Create</a>          
                <a class="clear-btn btn btn-default btn-lg hidden buffer-top">Clear</a>          
            </div>          
        </div>
        <div class="character-queue"></div>
    </div>
</div>